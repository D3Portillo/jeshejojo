{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/lib/*": ["./lib/*"],
      "@/components/*": ["./components/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "./components/**/*.js",
    "./components/*.js",
    "./pages/**/*.js",
    "./pages/*.js",
    "**/*.tsx",
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
